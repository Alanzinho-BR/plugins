package br.com.piracraft.lobby2.npc;

import org.bukkit.entity.Entity;

import br.com.piracraft.lobby2.Main;
import br.com.piracraft.lobby2.utils.Cor;
import br.com.piracraft.lobby2.utils.UtilsChat;
import net.citizensnpcs.api.CitizensAPI;

public class RemoverNPCs {

	public void removerNPCs() {
		new UtilsChat("Aviso", "Removendo todos os npcs.", Cor.Verde).enviarAlertaConsole();
		CitizensAPI.getNPCRegistry().deregisterAll();
	}

	public void removerEntidades() {
		new UtilsChat("Aviso", "Removendo todas as entidades.", Cor.Verde).enviarAlertaConsole();
		for (Entity entity : Main.getPlugin().getServer().getWorld("world").getEntities()) {
			entity.remove();
		}
	}

}
