package me.douglasamv.hg.Comandos;

import java.text.SimpleDateFormat;

import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

import me.douglasamv.hg.Main;
import me.douglasamv.hg.Timer.StringTimer;

public class Help implements CommandExecutor {

	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if (!(sender instanceof Player)) {
			sender.sendMessage("§cComando de Jogador!");
			return true;
		}
		Player p = (Player) sender;
		if (cmd.getName().equalsIgnoreCase("ip")) {
			p.sendMessage("§7Endereco do servidor: " + Main.instance.getConfig().getString("ip"));
		}
		if ((cmd.getName().equalsIgnoreCase("help"))) {
			if (Main.PreGame) {
				p.sendMessage("§7Informacoes");
				p.sendMessage("§7Estagio: Pre Jogo");
				p.sendMessage("§7Inicia em: " + StringTimer.TimerGame(Main.TimerIniciando));
				p.sendMessage("§7Jogadores participando: " + Main.Jogadores.size());
				p.sendMessage("§7Endereco do servidor: " + Main.instance.getConfig().getString("ip"));
			}
			if (Main.PreInvencibilidade) {
				p.sendMessage("§7Informacoes");
				p.sendMessage("§7Estagio: Invencibilidade");
				p.sendMessage("§7Invencibilidade: " + StringTimer.TimerGame(Main.TimerInvencibilidade));
				p.sendMessage("§7Jogadores participando: " + Main.Jogadores.size());
				p.sendMessage("§7Endereco do servidor: " + Main.instance.getConfig().getString("ip"));
			}
			if (Main.Partida) {
				int millis = Main.Andamento * 1000;
				SimpleDateFormat df = new SimpleDateFormat("mm:ss");
				String time = df.format(Integer.valueOf(millis));
				p.sendMessage("§7Informacoes");
				p.sendMessage("§7Estagio: Em Andamento");
				p.sendMessage("§7Tempo: " + time);
				p.sendMessage("§7Jogadores participando: " + Main.Jogadores.size());
				p.sendMessage("§7Endereco do servidor: " + Main.instance.getConfig().getString("ip"));
			}
		}
		return true;
	}
}