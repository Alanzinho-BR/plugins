package me.douglasamv.hg.Comandos;

import java.util.ArrayList;

import org.bukkit.Bukkit;
import org.bukkit.GameMode;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;

import me.douglasamv.hg.Main;
import me.douglasamv.hg.Manager.EspectadoresManager;

public class Admin implements CommandExecutor, Listener {

	public static ArrayList<Player> admin = new ArrayList<Player>();
	
	
	@EventHandler
	void entrar(PlayerJoinEvent e) {
		Player p = e.getPlayer();
		if(!p.hasPermission("hg.cmd.admin")) {
			for(Player p2:admin) {
				p.hidePlayer(p2);
			}
		}
	}

	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if (!(sender instanceof Player)) {
			sender.sendMessage("§cComando de Jogador!");
			return true;
		}
		Player p = (Player) sender;
		if (cmd.getName().equalsIgnoreCase("admin")) {
			if (p.hasPermission("hg.cmd.admin")) {
				if (!admin.contains(p)) {
					admin.add(p);
					p.setGameMode(GameMode.CREATIVE);
					p.sendMessage("§5Voce entrou no modo Admin");
					p.sendMessage("§5Voce esta invisivel para todos");
					for (Player jogadores : Bukkit.getOnlinePlayers()) {
						jogadores.hidePlayer(p);
					}
					Main.Watch.remove(p.getName());
					Bukkit.getServer().getScheduler().scheduleSyncDelayedTask(Main.instance, new Runnable() {
						public void run() {
							Main.Jogadores.remove(p.getName());
						}
					}, 3L);
				} else {
					admin.remove(p);
					p.sendMessage("§aVoce saiu no modo Admin");
					p.sendMessage("§aVoce esta visivel para todos");
					for (Player jogadores : Bukkit.getOnlinePlayers()) {
						jogadores.showPlayer(p);
					}
					p.setGameMode(GameMode.SURVIVAL);
					Main.Watch.remove(p.getName());
					EspectadoresManager.DamageMobs.remove(p.getName());
					Bukkit.getServer().getScheduler().scheduleSyncDelayedTask(Main.instance, new Runnable() {
						public void run() {
							Main.Jogadores.add(p.getName());
						}
					}, 3L);
				}
			} else {
				p.sendMessage("§cSem permissao!");
				return true;
			}
		}
		return true;
	}
}