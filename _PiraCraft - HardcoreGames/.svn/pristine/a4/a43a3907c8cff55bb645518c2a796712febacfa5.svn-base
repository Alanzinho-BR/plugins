package me.douglasamv.hg.Comandos;

import java.text.DecimalFormat;

import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

import me.douglasamv.hg.Main;
import me.douglasamv.hg.Feast.FeastManager;
import me.douglasamv.hg.Manager.Habilidade;
import me.douglasamv.hg.Timer.StringTimer;

public class Info implements CommandExecutor {

	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if (!(sender instanceof Player)) {
			sender.sendMessage("§cComando de Jogador!");
			return true;
		}
		Player p = (Player) sender;
		final String KitName = Habilidade.NomeDoKit(Habilidade.getAbility(p));
		if ((cmd.getName().equalsIgnoreCase("info"))) {
			if (Main.PreGame) {
				p.sendMessage("§7Informacoes: " + p.getName());
				p.sendMessage("§7Kit: " + KitName);
				p.sendMessage("§7Estagio: Pre Jogo");
				p.sendMessage("§7Tempo: " + StringTimer.TimerGame(Main.TimerIniciando));
				p.sendMessage("§7Jogadores participando: " + Main.Jogadores.size());
			}
			if (Main.PreInvencibilidade) {
				p.sendMessage("§7Informacoes: " + p.getName());
				p.sendMessage("§7Kit: " + KitName);
				p.sendMessage("§7Estagio: Invencibilidade");
				p.sendMessage("§7Tempo: " + StringTimer.TimerGame(Main.TimerInvencibilidade));
				p.sendMessage("§7Jogadores participando: " + Main.Jogadores.size());
			}
			if (Main.Partida) {
				p.sendMessage("§7Informacoes: " + p.getName());
				p.sendMessage("§7Kit: " + KitName);
				p.sendMessage("§7Estagio: Em Andamento");
				if (Main.Andamento >= 900) {
					DecimalFormat df = new DecimalFormat("##.#");
					p.sendMessage("§7Feast: " + df.format(FeastManager.mainBlock.getLocation().getX()) + ", "
							+ df.format(FeastManager.mainBlock.getLocation().getY()) + ", "
							+ df.format(FeastManager.mainBlock.getLocation().getZ()));
				}
				p.sendMessage("§7Kills: " + Listener.getKs(p));
				p.sendMessage("§7Jogadores participando: " + Main.Jogadores.size());
			}
			return true;
		}
		return true;
	}
}