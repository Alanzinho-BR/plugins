	public static String[][] infoSalasHardcore(int idNetwork) {
		String[][] salas = new String[10][4];
		try {
			ResultSet rs = MySQL.getQueryResult(
					"select * from V_MENU_SERVIDORES where ID_MINIGAME = '4' and SALA_TIPO = '2' and ID_NETWORK = '"
							+ idNetwork + "';");
			int id = 0;
			while (rs.next()) {
				salas[id][0] = rs.getString("ATIVO");
				id++;
				
			}
			rs.getStatement().getConnection().close();
		} catch (Exception e) {
		}
		return salas;
	}
