package me.douglasamv.hg.Comandos;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.craftbukkit.v1_8_R3.entity.CraftPlayer;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;

import me.douglasamv.hg.Manager.Habilidade;

public class Check implements CommandExecutor, Listener {

	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if (!(sender instanceof Player)) {
			sender.sendMessage("§cComando de Jogador!");
			return true;
		}
		Player p = (Player) sender;
		if (cmd.getName().equalsIgnoreCase("invis") && (p.hasPermission("hg.cmd.admin"))) {
			p.sendMessage("§5Voce ficou Invisivel");
			for (Player ps : Bukkit.getOnlinePlayers()) {
				ps.hidePlayer(p);
			}
		}
		if (cmd.getName().equalsIgnoreCase("checar")) {
			if (!p.hasPermission("hg.cmd.checar")) {
				p.sendMessage("§cSem permissao!");
				return true;
			}
			if (args.length == 1) {
				Player target = Bukkit.getPlayerExact(args[0]);
				if ((target == null) || (!(target instanceof Player))) {
					p.sendMessage("§cJogador nao encontrado!");
					return true;
				}
				final String KitName = Habilidade.NomeDoKit(Habilidade.getAbility(target));
				if (args.length == 0) {
					p.sendMessage("§cUse /checar <player>");
					return true;
				}
				if (args.length == 1) {
					Player jogador = Bukkit.getPlayerExact(args[0]);
					if ((target instanceof Player)) {
						p.sendMessage("§7Nick: " + jogador.getName());
						p.sendMessage("§7UUID: " + jogador.getUniqueId().toString());
						p.sendMessage("§7Endereco IP: " + jogador.getAddress().getHostString());
						p.sendMessage("§7Kit: " + KitName);
						p.sendMessage("§7Vida: " + ((CraftPlayer) jogador).getHealth() + "/"
								+ ((CraftPlayer) jogador).getMaxHealth());
						p.sendMessage("§7Fome: " + jogador.getFoodLevel());
						p.sendMessage("§7Kills: " + me.douglasamv.hg.Comandos.Listener.getKs(jogador));
						p.sendMessage("§7Gamemode: " + jogador.getGameMode());
						p.sendMessage("§7Cordenadas " + jogador.getLocation().getBlockX() + ", "
								+ jogador.getLocation().getBlockY() + ", " + target.getLocation().getBlockZ());
					}

				}
			}
		}
		return true;
	}
}