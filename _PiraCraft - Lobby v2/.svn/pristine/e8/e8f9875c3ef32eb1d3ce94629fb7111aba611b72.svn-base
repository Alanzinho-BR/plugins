package br.com.piracraft.lobby2.eventos;

import org.bukkit.GameMode;
import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;

import br.com.piracraft.api.caixas.ItemAPI;
import br.com.piracraft.lobby2.scoreboard.SetarScoreBoard;
import br.com.piracraft.lobby2.utils.lobby.PegarLobby;

public class Entrar implements Listener {

	@EventHandler
	void entrar(PlayerJoinEvent event) {
		event.setJoinMessage(null);
		Player player = event.getPlayer();
		player.setGameMode(GameMode.SURVIVAL);
		player.getInventory().clear();
		player.getInventory().setArmorContents(null);
		player.setHealthScale(20);
		player.setFoodLevel(20);
		player.teleport(new PegarLobby().getLobby());
		new SetarScoreBoard(player, br.com.piracraft.api.Main.network.get(player)).setar();
		darItens(player);
	}

	public void darItens(Player player) {
		player.getInventory().setItem(0, ItemAPI.Criar(Material.COMPASS, 1, 0, "§aGames", false));
	}

}
