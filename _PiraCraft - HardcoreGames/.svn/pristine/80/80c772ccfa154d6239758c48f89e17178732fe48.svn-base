package me.douglasamv.hg.Comandos;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerCommandPreprocessEvent;

import me.douglasamv.hg.Manager.Habilidade;

public final class KitDisable implements Listener, CommandExecutor {

	public static boolean KitsDisable;

	@EventHandler
	public void NoKitDisable(final PlayerCommandPreprocessEvent event) {
		Player p = event.getPlayer();
		if (KitsDisable) {
			if (event.getMessage().toLowerCase().startsWith("/kit ")) {
				p.sendMessage("§cOs kits estao desativados!");
				event.setCancelled(true);
				return;
			}
		}
	}

	@Override
	public final boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if (!(sender instanceof Player)) {
			sender.sendMessage("§cComando de Jogador!");
			return true;
		}
		Player p = (Player) sender;
		if ((cmd.getName().equalsIgnoreCase("togglekit"))) {
			if (p.hasPermission("hg.cmd.toggle")) {
				if (args.length == 0) {
					sender.sendMessage("§cUse /togglekit <Nick>");
					return true;
				}
				Player target = Bukkit.getServer().getPlayer(args[0]);
				if (target == null) {
					p.sendMessage("§cEste jogadore esta offline");
					return true;
				}
				if (args[0].equalsIgnoreCase(target.getName())) {
					Habilidade.removeAbility(target);
					p.sendMessage("§eVoce desativou o kit de " + target.getName());
					target.sendMessage("§eSeu kit foi desativado");
				}
			} else {
				p.sendMessage("§cSem permissao!");
				return true;
			}
		}
		return true;
	}
}
