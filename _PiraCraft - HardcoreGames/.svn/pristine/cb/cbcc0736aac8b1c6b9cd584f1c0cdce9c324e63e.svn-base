package me.douglasamv.hg.Comandos;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;

import me.douglasamv.hg.Manager.EspectadoresManager;

public final class CMDSpec implements Listener, CommandExecutor {

	@Override
	public final boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		Player p = (Player) sender;
		if ((cmd.getName().equalsIgnoreCase("spec")) && (p.hasPermission("hg.cmd.admin"))) {
			if (args.length == 0) {
				sender.sendMessage("§cUse /specs <on/off>");
				return true;
			}
			if (args[0].equalsIgnoreCase("on")) {
				sender.sendMessage("§eTodos ficaram visiveis para voce");
				for (Player Invisiveis : Bukkit.getOnlinePlayers()) {
					p.showPlayer(Invisiveis);
				}
			} else if (args[0].equalsIgnoreCase("off")) {
				sender.sendMessage("§eTodos ficaram invisiveis para voce");
				for (Player p1 : Admin.admin) {
					p.hidePlayer(p1);
				}
				for (Player p2 : EspectadoresManager.DamageMobs) {
					p.hidePlayer(p2);
				}
			} else {
				sender.sendMessage("§cUse /specs <on/off>");
			}
		} else {
			p.sendMessage("§cSem permissao!");
			return true;
		}
		return true;
	}
}