package me.douglasamv.hg.Comandos;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;

public class CMDPvP implements Listener, CommandExecutor {

	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if (!(sender instanceof Player)) {
			sender.sendMessage("§cComando de Jogador!");
			return true;
		}
		Player p = (Player) sender;
		if (cmd.getName().equalsIgnoreCase("pvp")) {
			if (p.hasPermission("hg.cmd.pvp")) {
				if (args.length == 0) {
					p.sendMessage("§cUse /pvp <on/off>");
					return true;
				}
				if ((args[0].equalsIgnoreCase("on"))) {
					Bukkit.getServer().getWorld("world").setPVP(true);
					Bukkit.broadcastMessage("§cPvP ativado!");
				}
				if ((args[0].equalsIgnoreCase("off"))) {
					Bukkit.getServer().getWorld("world").setPVP(false);
					Bukkit.broadcastMessage("§cPvP desativado!");
				}
			} else {
				p.sendMessage("§cSem permissao!");
				return true;
			}
		}
		return true;
	}
}